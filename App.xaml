<Application x:Class="MizeKar.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        
        <!-- Button Style without hover effects -->
        <Style x:Key="NoHoverButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Global Font Styles -->
        <Style x:Key="PersianTextStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Shabnam"/>
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>
        
        <Style x:Key="PersianButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Shabnam"/>
        </Style>
        
        <Style x:Key="PersianLabelStyle" TargetType="Label">
            <Setter Property="FontFamily" Value="Shabnam"/>
        </Style>
        
        <Style x:Key="PersianTextBoxStyle" TargetType="TextBox">
            <Setter Property="FontFamily" Value="Shabnam"/>
        </Style>
        
        <!-- Default styles that auto-detect language -->
        <Style TargetType="TextBlock" BasedOn="{StaticResource PersianTextStyle}"/>
        <Style TargetType="Button" BasedOn="{StaticResource PersianButtonStyle}"/>
        <Style TargetType="Label" BasedOn="{StaticResource PersianLabelStyle}"/>
        <Style TargetType="TextBox" BasedOn="{StaticResource PersianTextBoxStyle}"/>
        
    </Application.Resources>
</Application>