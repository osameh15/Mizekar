<Window x:Class="MizeKar.FolderManagementScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Title="Mizekar - مدیریت پوشه‌ها"
        Icon="/Assets/logo.png">
    
    <Grid>
        <!-- Folder Management Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="Transparent" 
                Padding="10" 
                BorderBrush="#fff" 
                BorderThickness="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Side: Add Folder Button -->
                <Button Grid.Column="0"
                        Width="120" Height="45"
                        Background="Transparent" BorderThickness="0"
                        Margin="0,0,10,0"
                        Click="CreateFolderButton_Click"
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="/Assets/icons/add-folder.png" Width="24" Height="24" Margin="0,0,8,0"/>
                        <TextBlock Text="ایجاد پوشه" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- Left Side: Home Button -->
                <Button Grid.Column="1"
                        Width="100" Height="45"
                        Background="Transparent" BorderThickness="0"
                        Margin="0,0,10,0"
                        Click="BackButton_Click"
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="/Assets/icons/home.png" Width="24" Height="24" Margin="0,0,8,0"/>
                        <TextBlock Text="خانه" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <!-- Center: Title -->
                <TextBlock Grid.Column="2"
                           Text="مدیریت پوشه‌ها" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                
                <!-- Right Side: Exit Button -->
                <Button Grid.Column="3"
                        Width="100" Height="45"
                        Background="Transparent" BorderThickness="0"
                        Click="ExitButton_Click"
                        Cursor="Hand">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="/Assets/icons/exit.png" Width="24" Height="24" Margin="0,0,8,0"/>
                        <TextBlock Text="خروج" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
        
        <!-- Folder List -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      Margin="20">
            <ItemsControl x:Name="FoldersItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#34495E" 
                                CornerRadius="8" 
                                Margin="10" 
                                Padding="15"
                                Width="200" 
                                Height="120">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0"
                                           Text="{Binding Name}" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           TextWrapping="Wrap"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"/>
                                
                                <StackPanel Grid.Row="1" 
                                            Orientation="Horizontal" 
                                            HorizontalAlignment="Center">
                                    <Button Width="80" Height="35"
                                           Background="Transparent" BorderThickness="0"
                                           Margin="0,0,5,0"
                                           Click="DeleteFolder_Click"
                                           Tag="{Binding Path}">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Image Source="/Assets/icons/remove.png" Width="18" Height="18" Margin="0,0,6,0"/>
                                            <TextBlock Text="حذف" FontSize="12" Foreground="White" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                            
                                    <Button Width="80" Height="35"
                                           Background="Transparent" BorderThickness="0"
                                           Click="ViewFolder_Click"
                                           Tag="{Binding Path}">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Image Source="/Assets/icons/view.png" Width="18" Height="18" Margin="0,0,6,0"/>
                                            <TextBlock Text="مشاهده" FontSize="12" Foreground="White" VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="#34495E" 
                Padding="10">
            <TextBlock x:Name="StatusTextBlock"
                       Text="آماده" 
                       FontSize="12" 
                       Foreground="#BDC3C7"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
    
</Window>