<Window x:Class="MizeKar.FolderManagementScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Title="Mizekar - Folder Management"
        Icon="/Assets/logo.png">
    
    <Grid>
        <!-- Folder Management Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="Transparent" 
                Padding="10" 
                BorderBrush="#fff" 
                BorderThickness="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Side: Exit Button -->
                <Button Grid.Column="0"
                        Width="120" Height="45"
                        Style="{StaticResource NoHoverButtonStyle}"
                        Margin="0,0,10,0"
                        Click="ExitButton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="خروج" FontSize="14" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Image Source="/Assets/icons/exit.png" Width="24" Height="24"/>
                    </StackPanel>
                </Button>
                
                <!-- Left Side: Refresh Button -->
                <Button Grid.Column="1"
                        Width="120" Height="45"
                        Style="{StaticResource NoHoverButtonStyle}"
                        Margin="0,0,10,0"
                        Click="RefreshButton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="بارگذاری مجدد" FontSize="14" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Image Source="/Assets/icons/refresh.png" Width="24" Height="24"/>
                    </StackPanel>
                </Button>
                
                <!-- Center: Title -->
                <TextBlock Grid.Column="2"
                           x:Name="TitleTextBlock"
                           Text="مدیریت پوشه‌ها" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                
                <!-- Right Side: Back to Categories Button -->
                <Button Grid.Column="3"
                    Width="120" Height="45"
                    Style="{StaticResource NoHoverButtonStyle}"
                    Margin="0,0,10,0"
                    Click="BackToCategories_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="دسته‌بندی‌ها" FontSize="14" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Image Source="/Assets/icons/categories.png" Width="24" Height="24"/>
                    </StackPanel>
                </Button>

                <!-- Right Side: Home Button -->
                <Button Grid.Column="4"
                        Width="120" Height="45"
                        Style="{StaticResource NoHoverButtonStyle}"
                        Margin="0,0,10,0"
                        Click="BackButton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="خانه" FontSize="14" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Image Source="/Assets/icons/home.png" Width="24" Height="24"/>
                    </StackPanel>
                </Button>
                
                <!-- Right Side: Add Folder Button -->
                <Button Grid.Column="5"
                        Width="120" Height="45"
                        Style="{StaticResource NoHoverButtonStyle}"
                        Click="CreateFolderButton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="ایجاد پوشه" FontSize="14" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Image Source="/Assets/icons/add-folder.png" Width="24" Height="24"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
        
        <!-- Folder List -->
        <Border Grid.Row="1"
                Height="560"
                VerticalAlignment="Top"
                Margin="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalAlignment="Top">
                <ItemsControl x:Name="FoldersItemsControl"
                              VerticalAlignment="Top">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Top"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#34495E" 
                                CornerRadius="8" 
                                Margin="10" 
                                Padding="15"
                                Width="200" 
                                Height="120">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0"
                                           Text="{Binding Name}" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           TextWrapping="Wrap"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"/>
                                
                                <StackPanel Grid.Row="1" 
                                            Orientation="Horizontal" 
                                            HorizontalAlignment="Center">
                                    <Button Width="80" Height="35"
                                           Style="{StaticResource NoHoverButtonStyle}"
                                           Margin="0,0,5,0"
                                           Click="DeleteFolder_Click"
                                           Tag="{Binding Path}">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="حذف" FontSize="12" Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                            <Image Source="/Assets/icons/remove.png" Width="18" Height="18"/>
                                        </StackPanel>
                                    </Button>
                                            
                                    <Button Width="80" Height="35"
                                           Style="{StaticResource NoHoverButtonStyle}"
                                           Click="ViewFolder_Click"
                                           Tag="{Binding Path}">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <TextBlock Text="مشاهده" FontSize="12" Foreground="White" VerticalAlignment="Center" Margin="0,0,6,0"/>
                                            <Image Source="/Assets/icons/view.png" Width="18" Height="18"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            </ScrollViewer>
        </Border>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Padding="10">
            <TextBlock x:Name="StatusTextBlock"
                       Text="آماده" 
                       FontSize="14" 
                       Foreground="#e6e6e6"
                       HorizontalAlignment="Right"
                       Margin="0, 0, 15, 0"/>
        </Border>
    </Grid>
    
</Window>