<Window x:Class="MizeKar.FolderManagementScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Background="#2C3E50"
        Title="Mizekar - مدیریت پوشه‌ها">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#34495E" 
                Padding="20" 
                BorderBrush="#1ABC9C" 
                BorderThickness="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0"
                           Text="مدیریت پوشه‌ها" 
                           FontSize="28" 
                           FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                
                <Button Grid.Column="1"
                        Content="بازگشت" 
                        FontSize="14" 
                        Background="#E74C3C" 
                        Foreground="White"
                        Width="80" 
                        Height="35"
                        Margin="0,0,10,0"
                        Click="BackButton_Click"/>
                        
                <Button Grid.Column="2"
                        Content="ایجاد پوشه جدید" 
                        FontSize="14" 
                        Background="#27AE60" 
                        Foreground="White"
                        Width="120" 
                        Height="35"
                        Click="CreateFolderButton_Click"/>
            </Grid>
        </Border>
        
        <!-- Folder List -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      Margin="20">
            <ItemsControl x:Name="FoldersItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" 
                                   HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#34495E" 
                                CornerRadius="8" 
                                Margin="10" 
                                Padding="15"
                                Width="200" 
                                Height="120">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0"
                                           Text="{Binding Name}" 
                                           FontSize="16" 
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           TextWrapping="Wrap"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           TextAlignment="Center"/>
                                
                                <StackPanel Grid.Row="1" 
                                            Orientation="Horizontal" 
                                            HorizontalAlignment="Center">
                                    <Button Content="مشاهده" 
                                            FontSize="12" 
                                            Background="#3498DB" 
                                            Foreground="White"
                                            Width="70" 
                                            Height="25"
                                            Margin="0,0,5,0"
                                            Click="ViewFolder_Click"
                                            Tag="{Binding Path}"/>
                                            
                                    <Button Content="حذف" 
                                            FontSize="12" 
                                            Background="#E74C3C" 
                                            Foreground="White"
                                            Width="50" 
                                            Height="25"
                                            Click="DeleteFolder_Click"
                                            Tag="{Binding Path}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="#34495E" 
                Padding="10">
            <TextBlock x:Name="StatusTextBlock"
                       Text="آماده" 
                       FontSize="12" 
                       Foreground="#BDC3C7"
                       HorizontalAlignment="Center"/>
        </Border>
    </Grid>
    
</Window>