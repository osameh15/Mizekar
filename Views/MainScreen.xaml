<Window x:Class="MizeKar.MainScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Title="Mizekar - Main Screen"
        Icon="/Assets/logo.png">
    
    <Grid>
        <!-- Main Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Logo Section -->
        <Border Grid.Row="0" 
                Background="#34495E" 
                Padding="20" 
                BorderBrush="#1ABC9C" 
                BorderThickness="0,0,0,2">
            <TextBlock Text="Mizekar" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        
        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Width="300">
            
            <Button Width="140" Height="90"
                   Background="Transparent" BorderThickness="0"
                   Click="LoginButton_Click"
                   Margin="0,0,0,20"
                   Cursor="Hand">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="/Assets/icons/enter.png" Width="32" Height="32" Margin="0,0,10,0"/>
                    <TextBlock Text="ورود" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <Button Width="140" Height="90"
                   Background="Transparent" BorderThickness="0"
                   Click="AboutUsButton_Click"
                   Margin="0,0,0,20"
                   Cursor="Hand">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="/Assets/icons/about-us.png" Width="32" Height="32" Margin="0,0,10,0"/>
                    <TextBlock Text="درباره ما" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
            
            <Button Width="140" Height="90"
                   Background="Transparent" BorderThickness="0"
                   Click="ContactUsButton_Click"
                   Margin="0,0,0,20"
                   Cursor="Hand">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="/Assets/icons/contact-us.png" Width="32" Height="32" Margin="0,0,10,0"/>
                    <TextBlock Text="ارتباط با ما" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
                    
            <!-- Exit Button -->
            <Button Width="140" Height="90"
                   Background="Transparent" BorderThickness="0"
                   Click="ExitButton_Click"
                   Margin="0,20,0,0"
                   Cursor="Hand">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="/Assets/icons/exit.png" Width="32" Height="32" Margin="0,0,10,0"/>
                    <TextBlock Text="خروج" FontSize="16" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
    
</Window>