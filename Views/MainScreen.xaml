<Window x:Class="MizeKar.MainScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Title="Mizekar - Main Screen">
    
    <Grid>
        <!-- Main Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Logo Section -->
        <Border Grid.Row="0" 
                Background="#34495E" 
                Padding="20" 
                BorderBrush="#1ABC9C" 
                BorderThickness="0,0,0,2">
            <TextBlock Text="Mizekar" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>
        
        <!-- Navigation Buttons -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Width="300">
            
            <Button Width="120" Height="80"
                   Background="Transparent" BorderThickness="0"
                   Click="LoginButton_Click"
                   Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="/Assets/icons/enter.png" Width="24" Height="24" Margin="0,0,8,0"/>
                    <TextBlock Text="ورود" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#CC3498DB"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button Width="120" Height="80"
                   Background="Transparent" BorderThickness="0"
                   Click="AboutUsButton_Click"
                   Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="/Assets/icons/about-us.png" Width="24" Height="24" Margin="0,0,8,0"/>
                    <TextBlock Text="درباره ما" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#CC27AE60"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            
            <Button Width="120" Height="80"
                   Background="Transparent" BorderThickness="0"
                   Click="ContactUsButton_Click"
                   Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="/Assets/icons/contact-us.png" Width="24" Height="24" Margin="0,0,8,0"/>
                    <TextBlock Text="ارتباط با ما" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#CCE74C3C"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
                    
            <!-- Exit Button -->
            <Button Width="120" Height="80"
                   Background="Transparent" BorderThickness="0"
                   Click="ExitButton_Click"
                   Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Image Source="/Assets/icons/exit.png" Width="24" Height="24" Margin="0,0,8,0"/>
                    <TextBlock Text="خروج" FontSize="14" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#CC7F8C8D"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
    
</Window>