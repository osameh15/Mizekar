<Window x:Class="MizeKar.ExitConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تأیید خروج"
        Width="480"
        Height="280"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Icon="/Assets/logo.png">

    <Grid>
        <!-- Dialog Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/images/dialog-background.jpg" Stretch="Fill"/>
        </Grid.Background>

        <Border Margin="20" Background="#FFFFFF" Opacity="0.95" CornerRadius="10" Padding="15">
            <StackPanel>
                <!-- Header -->
                <TextBlock Text="تأیید خروج از برنامه"
                          FontSize="18"
                          FontWeight="Bold"
                          Foreground="#E74C3C"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,15"/>

                <!-- Exit Icon -->
                <Image Source="/Assets/icons/exit.png"
                       Width="48" Height="48"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

                <!-- Content -->
                <TextBlock Text="آیا از خروج از برنامه اطمینان دارید؟"
                           FontSize="16"
                           FontWeight="SemiBold"
                           Foreground="#2C3E50"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,0,0,25"/>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <Button Width="100" Height="45"
                           Style="{StaticResource NoHoverButtonStyle}"
                           Click="CancelButton_Click"
                           Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="انصراف" FontSize="14" Foreground="#2C3E50" VerticalAlignment="Center"/>
                            <Image Source="/Assets/icons/close.png" Width="20" Height="20" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Width="100" Height="45"
                           Style="{StaticResource NoHoverButtonStyle}"
                           Click="ExitButton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock Text="خروج" FontSize="14" Foreground="#E74C3C" VerticalAlignment="Center"/>
                            <Image Source="/Assets/icons/exit.png" Width="20" Height="20" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
