<Window x:Class="MizeKar.ContactUsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ارتباط با ما"
        Width="450"
        Height="350"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Icon="/Assets/logo.png">
    
    <Grid>
        <!-- Dialog Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/images/dialog-background.jpg" Stretch="Fill"/>
        </Grid.Background>
        
        <Border Margin="20" Background="#FFFFFF" Opacity="0.95" CornerRadius="10" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header with Close Button -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="تماس با ما" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              Foreground="#2C3E50"
                              HorizontalAlignment="Center"/>
                    
                    <!-- Close Button -->
                    <Button Grid.Column="1" Width="auto" Height="auto" 
                           Style="{StaticResource NoHoverButtonStyle}"
                           Click="CloseButton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Image Source="/Assets/icons/close.png" Width="24" Height="24" Margin="0,0,0,0"/>
                        </StackPanel>
                    </Button>
                </Grid>
                
                <!-- Content -->
                <StackPanel Grid.Row="1">
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text=":ایمیل" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"/>
                        <TextBlock Text="osirandoust@gmail.com" 
                                   FontSize="12" 
                                   Foreground="#3498DB"
                                   Margin="0,5,0,0"
                                   Cursor="Hand"
                                   MouseDown="Email_MouseDown"
                                   TextDecorations="Underline"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text=":تلگرام" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"/>
                        <TextBlock Text="https://t.me/osameh_ir" 
                                   FontSize="12" 
                                   Foreground="#3498DB"
                                   Margin="0,5,0,0"
                                   Cursor="Hand"
                                   MouseDown="Telegram_MouseDown"
                                   TextDecorations="Underline"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text=":شماره تماس" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"/>
                        <TextBlock Text="09369642754" 
                                   FontSize="12" 
                                   Foreground="#3498DB"
                                   Margin="0,5,0,0"
                                   Cursor="Hand"
                                   MouseDown="Phone_MouseDown"
                                   TextDecorations="Underline"/>
                    </StackPanel>
                    
                    <TextBlock Text="برای هرگونه سوال یا پیشنهاد با ما در تماس باشید" 
                               FontSize="12" 
                               Foreground="#2C3E50"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,0,0,20"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>