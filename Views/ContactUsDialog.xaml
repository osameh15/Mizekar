<Window x:Class="MizeKar.ContactUsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ارتباط با ما"
        Width="450"
        Height="350"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">
    
    <Grid>
        <!-- Dialog Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/images/dialog-background.jpg" Stretch="Fill"/>
        </Grid.Background>
        
        <Border Margin="20" Background="#FFFFFF" Opacity="0.95" CornerRadius="10" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header with Close Button -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="اطلاعات تماس" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              Foreground="#2C3E50"
                              HorizontalAlignment="Center"/>
                    
                    <!-- Close Button -->
                    <Button Grid.Column="1" Width="80" Height="30" 
                           Background="Transparent" BorderThickness="0"
                           Click="CloseButton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Image Source="/Assets/icons/close.png" Width="14" Height="14" Margin="0,0,6,0"/>
                            <TextBlock Text="بستن" FontSize="12" Foreground="#2C3E50" VerticalAlignment="Center"/>
                        </StackPanel>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#CC000000"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
                
                <!-- Content -->
                <StackPanel Grid.Row="1">
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="ایمیل:" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"/>
                        <TextBlock Text="info@mizekar.com" 
                                   FontSize="12" 
                                   Foreground="#7F8C8D"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="وب‌سایت:" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"/>
                        <TextBlock Text="www.mizekar.com" 
                                   FontSize="12" 
                                   Foreground="#7F8C8D"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,0,20">
                        <TextBlock Text="پشتیبانی:" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="#34495E"/>
                        <TextBlock Text="support@mizekar.com" 
                                   FontSize="12" 
                                   Foreground="#7F8C8D"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                    
                    <TextBlock Text="برای هرگونه سوال یا پیشنهاد با ما در تماس باشید." 
                               FontSize="12" 
                               Foreground="#2C3E50"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,0,0,20"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>