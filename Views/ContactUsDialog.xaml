<Window x:Class="MizeKar.ContactUsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ارتباط با ما"
        Width="400"
        Height="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Background="#ECF0F1" Margin="20">
        <StackPanel>
            <TextBlock Text="اطلاعات تماس" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Foreground="#2C3E50"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="ایمیل:" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#34495E"/>
                <TextBlock Text="info@mizekar.com" 
                           FontSize="12" 
                           Foreground="#7F8C8D"
                           Margin="0,5,0,0"/>
            </StackPanel>
            
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="وب‌سایت:" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#34495E"/>
                <TextBlock Text="www.mizekar.com" 
                           FontSize="12" 
                           Foreground="#7F8C8D"
                           Margin="0,5,0,0"/>
            </StackPanel>
            
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="پشتیبانی:" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#34495E"/>
                <TextBlock Text="support@mizekar.com" 
                           FontSize="12" 
                           Foreground="#7F8C8D"
                           Margin="0,5,0,0"/>
            </StackPanel>
            
            <TextBlock Text="برای هرگونه سوال یا پیشنهاد با ما در تماس باشید." 
                       FontSize="12" 
                       Foreground="#2C3E50"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,0,0,30"/>
            
            <Button Content="بستن" 
                    Width="100" 
                    Height="35"
                    Background="#3498DB" 
                    Foreground="White"
                    Click="CloseButton_Click"
                    HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
    
</Window>