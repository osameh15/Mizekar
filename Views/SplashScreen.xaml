<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="MizeKar.SplashScreen"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Title="Mizekar - Splash Screen"
        Icon="/Assets/logo.png" av:DesignWidth="350.986" av:DesignHeight="255.049">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!-- Splash Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/images/splash.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1">
            <TextBlock Text="میزکار - مدرسه شاهد دختران شهیده شهناز کریمی " 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            <TextBlock Text="لطفا کمی صبر کنید" 
                       FontSize="24" 
                       Foreground="#000"
                       HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" 
                         Width="200" 
                         Height="10" 
                         Margin="0,20,0,0"
                         Background="#34495E"
                         Foreground="#3498DB"/>
        </StackPanel>
    </Grid>

</Window>