<Window x:Class="MizeKar.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Title="Mizekar">
    
    <Grid>
        <!-- Splash Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/images/splash.png" Stretch="UniformToFill"/>
        </Grid.Background>
        
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Mizekar" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>
            <TextBlock Text="مدیریت پوشه‌ها" 
                       FontSize="24" 
                       Foreground="#ECF0F1"
                       HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" 
                         Width="200" 
                         Height="10" 
                         Margin="0,20,0,0"
                         Background="#34495E"
                         Foreground="#3498DB"/>
        </StackPanel>
    </Grid>
    
</Window>