<Window x:Class="MizeKar.AboutUsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="درباره ما"
        Width="500"
        Height="320"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        Icon="/Assets/logo.png">
    
    <Grid>
        <!-- Dialog Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/images/dialog-background.jpg" Stretch="Fill"/>
        </Grid.Background>
        
        <Border Margin="20" Background="#FFFFFF" Opacity="0.95" CornerRadius="10" Padding="15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header with Close Button -->
                <Grid Grid.Row="0" Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="درباره ما" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              Foreground="#2C3E50"
                              HorizontalAlignment="Center"/>
                    
                    <!-- Close Button -->
                    <Button Grid.Column="1" Width="auto" Height="auto" 
                           Style="{StaticResource NoHoverButtonStyle}"
                           Click="CloseButton_Click">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Image Source="/Assets/icons/close.png" Width="24" Height="24" Margin="0,0,0,0"/>
                        </StackPanel>
                    </Button>
                </Grid>
                
                <!-- Content -->
                <StackPanel Grid.Row="1">
                    <TextBlock Text="مدرسه شاهد شهیده شهناز کریمی" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="#2C3E50"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="میزکار- برنامه مدیریت پوشه‌ها" 
                               FontSize="16" 
                               Foreground="#34495E"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>

                    <TextBlock Text="نسخه ۱.۱.۱" 
                               FontSize="14" 
                               Foreground="#7F8C8D"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>
                    
                    <TextBlock Text="این برنامه برای مدیریت آسان پوشه‌ها با پشتیبانی از زبان فارسی طراحی شده است" 
                               FontSize="12" 
                               Foreground="#2C3E50"
                               TextWrapping="Wrap"
                               TextAlignment="Right"
                               Margin="0,0,0,20"/>

                    <TextBlock Text="مدیر دبستان سرکار خانم شرمین خوش سیرت" 
                       FontSize="12" 
                       Foreground="DarkGray"
                       TextWrapping="Wrap"
                       TextAlignment="Center"
                       Margin="0,20,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>