<Page x:Class="MizeKar.Pages.CategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <!-- Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Watermark Logo -->
        <Image Grid.RowSpan="3"
               Source="/Assets/logo-white.png"
               Width="400" Height="400"
               Opacity="0.3"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               IsHitTestVisible="False"/>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="Transparent"
                Padding="10"
                BorderBrush="#fff"
                BorderThickness="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side: Exit Button -->
                <Button Grid.Column="0"
                    Width="80" Height="45"
                    Style="{StaticResource NoHoverButtonStyle}"
                    Click="ExitButton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="خروج" FontSize="14" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Image Source="/Assets/icons/exit.png" Width="24" Height="24"/>
                    </StackPanel>
                </Button>

                <!-- Minimize Button -->
                <Button Grid.Column="1"
                    Width="130" Height="45"
                    Style="{StaticResource NoHoverButtonStyle}"
                    Margin="10,0,0,0"
                    Click="MinimizeButton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="کوچک کردن" FontSize="14" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Image Source="/Assets/icons/minimize.png" Width="24" Height="24"/>
                    </StackPanel>
                </Button>

                <!-- Center: Title -->
                <TextBlock Grid.Column="2"
                           Text="دسته‌بندی‌ها"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <!-- Right Side: Back Button -->
                <Button Grid.Column="3"
                    Width="130" Height="45"
                    Style="{StaticResource NoHoverButtonStyle}"
                    Margin="0,0,10,0"
                    Click="BackButton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="صفحه اصلی" FontSize="14" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Image Source="/Assets/icons/home.png" Width="24" Height="24"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Categories Grid - 3x3 Layout -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="40">
            <ItemsControl x:Name="CategoriesItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3" Rows="3"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{Binding Color}"
                                CornerRadius="12"
                                Margin="15"
                                Padding="20"
                                Width="300"
                                Height="180"
                                Cursor="Hand">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="4" Opacity="0.3" BlurRadius="10"/>
                            </Border.Effect>

                            <Button Style="{StaticResource NoHoverButtonStyle}"
                                    Click="CategoryButton_Click"
                                    Tag="{Binding Path}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="{Binding Name}"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="White"
                                               TextWrapping="Wrap"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               TextAlignment="Center"
                                               Margin="0,0,0,10"/>

                                    <TextBlock Grid.Row="1"
                                               Text="کلیک کنید"
                                               FontSize="14"
                                               Foreground="#BDC3C7"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Bottom"
                                               FontStyle="Italic"/>
                                </Grid>
                            </Button>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2"
            Padding="10">
            <TextBlock x:Name="StatusTextBlock"
                       Text="آماده"
                       FontSize="14"
                       Foreground="#e6e6e6"
                       HorizontalAlignment="Right"
                       Margin="0, 0, 15, 0"/>
        </Border>
    </Grid>

</Page>
