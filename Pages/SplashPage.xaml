<Page x:Class="MizeKar.Pages.SplashPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="22*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!-- Splash Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/images/splash.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Center" Grid.Column="1" Margin="0, 80, 0, 0">
            <!-- Logo -->
            <Image Source="/Assets/logo.png"
                   Width="132" Height="132"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"/>

            <TextBlock Text="میزکار - مدرسه شاهد دختران شهیده شهناز کریمی "
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>
            <TextBlock Text="لطفا کمی صبر کنید"
                       FontSize="24"
                       Foreground="#000"
                       HorizontalAlignment="Center"/>
            <ProgressBar IsIndeterminate="True"
                         Width="auto"
                         Height="10"
                         Margin="0,30,0,0"
                         Background="#34495E"
                         Foreground="#3498DB"/>
        </StackPanel>
    </Grid>

</Page>
