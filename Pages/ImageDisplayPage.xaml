<Page x:Class="MizeKar.Pages.ImageDisplayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid>
        <!-- Background Image -->
        <Grid.Background>
            <ImageBrush ImageSource="pack://application:,,,/Assets/images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Watermark Logo -->
        <Image Grid.RowSpan="3"
               Source="/Assets/logo-white.png"
               Width="400" Height="400"
               Opacity="0.3"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"
               IsHitTestVisible="False"/>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="Transparent"
                Padding="10"
                BorderBrush="#fff"
                BorderThickness="0,0,0,2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left Side: Exit Button -->
                <Button Grid.Column="0"
                        Width="80" Height="45"
                        Style="{StaticResource NoHoverButtonStyle}"
                        Click="ExitButton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="خروج" FontSize="14" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Image Source="/Assets/icons/exit.png" Width="24" Height="24"/>
                    </StackPanel>
                </Button>

                <!-- Minimize Button -->
                <Button Grid.Column="1"
                        Width="130" Height="45"
                        Style="{StaticResource NoHoverButtonStyle}"
                        Margin="0,0,10,0"
                        Click="MinimizeButton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="کوچک کردن" FontSize="14" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Image Source="/Assets/icons/minimize.png" Width="24" Height="24"/>
                    </StackPanel>
                </Button>

                <!-- Center: Title -->
                <TextBlock Grid.Column="2"
                           x:Name="TitleTextBlock"
                           Text="چارت عوامل اجرایی، آموزشی و پرورشی"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <!-- Right Side: Back to Categories Button -->
                <Button Grid.Column="3"
                        Width="120" Height="45"
                        Style="{StaticResource NoHoverButtonStyle}"
                        Margin="0,0,10,0"
                        Click="BackToCategories_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="دسته‌بندی‌ها" FontSize="14" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Image Source="/Assets/icons/categories.png" Width="24" Height="24"/>
                    </StackPanel>
                </Button>

                <!-- Right Side: Home Button -->
                <Button Grid.Column="4"
                        Width="100" Height="45"
                        Style="{StaticResource NoHoverButtonStyle}"
                        Margin="0,0,10,0"
                        Click="BackButton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="خانه" FontSize="14" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Image Source="/Assets/icons/home.png" Width="24" Height="24"/>
                    </StackPanel>
                </Button>

                <!-- Right Side: Upload Image Button -->
                <Button Grid.Column="5"
                        Width="120" Height="45"
                        Style="{StaticResource NoHoverButtonStyle}"
                        Click="UploadImageButton_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="بارگذاری تصویر" FontSize="14" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Image Source="/Assets/icons/add-folder.png" Width="24" Height="24"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Image Display Area -->
        <Border Grid.Row="1"
                Margin="0, 25, 0, 0"
                Background="Transparent"
                MaxWidth="560"
                MaxHeight="560"
                VerticalAlignment="Top">
            <Image x:Name="DisplayImage"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Cursor="Hand"
                   Source="/Assets/images/chart.png"
                   MouseDown="DisplayImage_MouseDown"/>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Padding="10">
            <TextBlock x:Name="StatusTextBlock"
                       Text="آماده"
                       FontSize="14"
                       Foreground="#e6e6e6"
                       HorizontalAlignment="Right"
                       Margin="0, 0, 15, 0"/>
        </Border>
    </Grid>
</Page>
